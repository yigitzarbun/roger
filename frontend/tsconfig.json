{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@/*": ["*"],
      "@api/*": ["../backend/src/api/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.scss",
    "src/**/*.scss.d.ts"
  ],
  "exclude": ["node_modules"]
}
