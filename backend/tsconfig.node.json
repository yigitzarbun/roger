{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "@/*": ["*"]
    },
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.scss", "src/global.scss.d.ts"],
  "files": ["src/**/*.ts", "src/**/*.scss.d.ts"],
  "exclude": ["node_modules"]
}
