{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "*": ["*"],
      "@/*": ["*"]
    },
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.scss",
    "src/**/*.scss.d.ts",
    "index.ts",
    "knexfile.ts",
    "server.ts"
  ],
  "exclude": ["node_modules"]
}
